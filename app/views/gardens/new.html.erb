<p>Put in Garden details like size and sunlight (Assisted By ChatGPT API) using prompts</p>


<!-- app/views/gardens/new.html.erb -->

<h1>Create a New Garden</h1>

<%= form_for @garden, url: gardens_path, method: :post do |f| %>
  <%= f.label :size, "Garden Size (m2)" %>
  <%= f.number_field :size, step: "0.01", required: true %>

  <%= f.label :sunlight, "Sunlight Percentage (%)" %>
  <%= f.number_field :sunlight, step: "1", required: true %>

  <%= f.submit "Submit" %>
<% end %>
