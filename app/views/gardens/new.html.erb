<div class="home-background">
  <%= image_tag("plants_1.jpg", alt: "Background Image", class: "background-image") %>
<div class="main-container">
  <h1 class="plant-heading">Create Your Garden</h1>

  <%= form_for @garden, html: { class: "garden-form" } do |f| %>
    <div class="form-group">
      <%= f.label :name, "Garden Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :location, "Location", class: "form-label" %>
      <%= f.text_field :location, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :outside, "Inside/Outside", class: "form-label" %>
      <%= f.select :outside, ["Inside", "Outside"], class: "form-select", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :size, "Garden Size (m2)", class: "form-label" %>
      <%= f.number_field :size, step: "0.01", class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :sunlight, "Sunlight Percentage (%)", class: "form-label" %>
      <%= f.number_field :sunlight, step: "10", class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :additional_info, "Additional Info", class: "form-label" %>
      <%= f.text_field :additional_info, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Create Garden", class: "form-submit" %>
    </div>
  <% end %>
  <%= link_to "Back", gardens_path, class: "back-button" %>
</div>
</div>
