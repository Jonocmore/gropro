<div class="container">
  <div class="row gutters">
    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-9">
      <div class="card h-100">
        <div class="card-body">
          <div class="account-settings">
            <!-- ... -->

<div class="user-profile">
  <!-- ... -->

<div class="user-profile">
  <div class="user-avatar">
    <% if @user.avatar.attached? %>
      <%= image_tag current_user.avatar.variant(resize_to_limit: [150, 150]), alt: "User Avatar", class: "avatar-image" %>
    <% else %>
      <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Default Avatar" class="avatar-image">
    <% end %>
  </div>
  <h5 class="user-name"><%= [@user.first_name, @user.last_name].join(' ') %></h5>
  <h6 class="user-email"><%= @user.email %></h6>
</div>

<!-- ... -->

</div>

<!-- ... -->

            <div class="about">
              <h5>About</h5>
              <%# <p><%= current_user.about %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
      <div class="card h-100">
        <div class="card-body">
          <%= form_with(model: current_user, url: profile_user_path(current_user), method: :patch, local: true, html: { multipart: true }) do |f| %>
            <div class="row gutters">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h6 class="mb-2 text-primary">Personal Details</h6>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="fullName">Full Name</label>
                  <%= f.text_field :full_name, class: "form-control", id: "fullName", placeholder: "Enter full name" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="eMail">Email</label>
                  <%= f.email_field :email, class: "form-control", id: "eMail", placeholder: "Enter email ID" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="phone">Phone</label>
                  <%= f.text_field :phone, class: "form-control", id: "phone", placeholder: "Enter phone number" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="website">Website URL</label>
                  <%= f.text_field :website, class: "form-control", id: "website", placeholder: "Website URL" %>
                </div>
              </div>
            </div>
            <div class="row gutters">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h6 class="mt-3 mb-2 text-primary">Address</h6>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="Street">Street</label>
                  <%= f.text_field :street, class: "form-control", id: "Street", placeholder: "Enter Street" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="ciTy">City</label>
                  <%= f.text_field :city, class: "form-control", id: "ciTy", placeholder: "Enter City" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="province">Province</label>
                  <%= f.text_field :province, class: "form-control", id: "province", placeholder: "Enter Province" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="postalCode">Postal Code</label>
                  <%= f.text_field :postal_code, class: "form-control", id: "postalCode", placeholder: "Enter Postal Code" %>
                </div>
              </div>
            </div>
            <div class="row gutters">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="text-right">
                  <button type="button" id="submit" name="submit" class="btn btn-secondary">Cancel</button>
                  <%= f.submit "Update", class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
